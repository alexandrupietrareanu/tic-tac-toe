{% extends '@layout/main.twig' %}

{% block title %}Play Tic Tac Toe{% endblock %}

{% block content %}
    <div class="text-center">
        <h1 class="mb-4 text-primary">{{ game.name }}</h1>
        <h2>Player X is {{ game.playerA.name }}</h2>
        <h2>Player O is {{ game.playerB.name }}</h2>

        <div class="board mx-auto">
            {% set gameLimit = game.limit * game.limit %}
            {% for i in 1..gameLimit %}
                <div class="cell" data-cell></div>
            {% endfor %}
        </div>

        <button id="restartBtn" class="btn btn-primary mt-4">Restart Game</button>
    </div>

    <style>
        .board {
            width: 300px;
            height: 300px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 5px;
        }
        .cell {
            background-color: #f8f9fa;
            border: 2px solid #0d6efd;
            font-size: 2.5rem;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            border-radius: .25rem;
        }
        .cell:hover { background-color: #e7f1ff; }
    </style>
{% endblock %}

{% block scripts %}
    <script>
        const cells = document.querySelectorAll('[data-cell]');
        let current = 'X';
        const game = "{{ game.name }}"
        const limit = {{ game.limit }};

        cells.forEach((cell, index) => {
            cell.addEventListener('click', () => {
                if (cell.textContent) return;

                cell.textContent = current;

                // Calculate row and column
                const row = Math.floor(index / limit);
                const col = index % limit;

                // Send move to backend
                fetch('/move', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        game: game,
                        row: row,
                        col: col,
                        player: current
                    })
                })
                    .then(res => res.json())
                    .then(data => console.log('Move response:', data))
                    .catch(err => console.error('Move error:', err));

                current = current === 'X' ? 'O' : 'X';
            });
        });

        document.getElementById('restartBtn').addEventListener('click', () =>
            cells.forEach(c => c.textContent = '')
        );
    </script>
{% endblock %}
